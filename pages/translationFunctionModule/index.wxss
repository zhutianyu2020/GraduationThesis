/* pages/translationFunctionModule/index.wxss */
.translation-container {
  padding: 20rpx;
}

.input-section {
  position: relative;
  margin-bottom: 30rpx;
}

.input-text {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.language-selection {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.language-buttons {
  display: flex;
  gap: 20rpx;
}

.arrow {
  margin: 0 30rpx;
  color: #666;
  font-size: 40rpx;
}

.lang-btn {
  min-width: 120rpx;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  margin: 0;
}

.lang-btn.active {
  background-color: #007AFF;
  color: white;
}

.translate-btn {
  width: 80%;
  background-color: #007AFF;
  color: white;
  margin: 30rpx auto;
}

.result-section {
  margin-top: 40rpx;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}

.result-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.result-text {
  font-size: 32rpx;
  color: #333;
  line-height: 1.5;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  padding-right: 20rpx;
}