/* pages/translationFunctionModule/index.wxss */
Paeg{
  width: 100%;
  height: 100%;
}
.container {
  padding: 20rpx;
}

.input-section {
  width: 100%;
  margin-bottom: 30rpx;
}

.input-item {
  margin-bottom: 20rpx;
}

.input-item input {
  border: 1rpx solid #ddd;
  padding: 10rpx;
  margin-top: 10rpx;
  width: 100%;
}

.module-list {
  margin-bottom: 20rpx;
}

.module-items {
  margin: 10rpx 0;
}

.module-item {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.module-item input {
  flex: 1;
  border: 1rpx solid #ddd;
  padding: 10rpx;
}

.delete-btn {
  padding: 0 20rpx;
  color: red;
}

.scroll-view {
  width: 100%;
  height: 500px;
  overflow: auto;
  display: flex;
  white-space: nowrap;
}

.chart-canvas {
  width: 100%;
  height: 500px;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.button-group {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.button-group button {
  flex: 1;
}

.picker {
  padding: 10rpx;
  border: 1rpx solid #ddd;
  border-radius: 5rpx;
}